<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.yocn.media">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name="com.yocn.meida.base.BaseApplication"
        android:allowBackup="false"
        android:icon="@drawable/camera"
        android:label="@string/app_name"
        android:roundIcon="@drawable/camera"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.yocn.meida.view.activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.yocn.meida.view.activity.camera.Camera1PreviewActivity" />
        <activity android:name="com.yocn.meida.view.activity.camera.PreviewPureActivity" />
        <activity android:name="com.yocn.meida.view.activity.PreviewDataActivity" />
        <activity android:name="com.yocn.meida.view.activity.camera.PreviewYUVDataActivity" />
        <activity android:name="com.yocn.meida.view.activity.camera.PreviewYUVDataActivity2" />
        <activity android:name="com.yocn.meida.view.activity.camera.PreviewNativeYUVActivity" />
        <activity android:name="com.yocn.meida.view.activity.FormatTransportActivity" />
        <activity android:name="com.yocn.meida.view.activity.PreviewGPUImageActivity" />
        <activity android:name="com.yocn.meida.view.activity.FormatTrans264Activity" />
        <activity android:name="com.yocn.meida.view.activity.SimpleOpenGLESActivity" />
        <activity android:name="com.yocn.meida.view.activity.mediacodec.MediaCodecActivity" />
        <activity android:name="com.yocn.meida.view.activity.mediacodec.SimpleMediaCodecDecodeAVActivity" />
        <activity android:name="com.yocn.meida.view.activity.mediacodec.SimpleMediaCodecDecodeVActivity" />
        <activity android:name="com.yocn.meida.view.activity.mediacodec.SimpleMediaCodecDecodeActivity" />
        <activity
            android:name="com.yocn.meida.view.activity.camera.PreviewWithOpenGLESActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yocn.meida.view.activity.YUVPlayerActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity android:name="com.yocn.meida.view.activity.camera.CameraActivity" />
        <activity android:name="com.yocn.meida.view.activity.ffmpeg.FFMpegActivity" />
        <activity android:name="com.yocn.meida.view.activity.ffmpeg.SimpleFFMpegPlayVideoActivity" />
        <activity android:name="com.yocn.meida.view.activity.ffmpeg.SimpleFFMpegPlayAudioActivity" />
        <activity android:name="com.yocn.meida.view.activity.ffmpeg.SimpleFFMpegPlayNormalTimeVideoActivity" />
        <activity android:name="com.yocn.meida.view.activity.ffmpeg.SimpleFFMpegPlayAudioVideoActivity" />
    </application>

</manifest>