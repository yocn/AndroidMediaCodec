<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/bg_window_drawable</item>
        <!--        <item name="listPopupWindowStyle">@style/listpopstyle</item>-->
    </style>

    <!--自定义seekbarstyle-->
    <style name="CustomSeekbarStyle">
        <item name="android:maxHeight">8dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@color/colorAccent</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress_drawable</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:thumb">@drawable/seekbar_thumb_drawable</item>
    </style>

    <style name="listpopstyle">
        <item name="android:popupElevation">0dp</item>
        <item name="android:popupBackground">@color/write</item>
    </style>

    <style name="tv_show_hint">
        <item name="android:textColor">@color/write</item>
        <item name="android:background">@color/half</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="text_popup">
        <item name="android:textSize">16sp</item>
        <item name="android:width">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray_555555</item>
        <item name="android:background">@color/write</item>
    </style>

</resources>
